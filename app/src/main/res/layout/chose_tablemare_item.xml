<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/bar_left_right_padding"
        android:paddingRight="@dimen/bar_left_right_padding"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tableware_select_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/unselected_drawable" />

            <TextView
                android:id="@+id/tableware_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="铁牌保温餐具"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/mid_text_size" />

            <TextView
                android:id="@+id/tablew_g_m_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（押金23.00元/份）"
                android:textColor="@color/shallow_text_color"
                android:textSize="@dimen/normal_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tableware_nums_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✘20"
                android:textColor="@color/shallow_text_color"
                android:textSize="@dimen/mid_text_size" />

            <TextView
                android:id="@+id/tableware_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="￥111.00"
                android:textColor="@color/red"
                android:textSize="@dimen/normal_text_size" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/item_divider"
        android:layout_marginLeft="@dimen/bar_left_right_padding" />
</RelativeLayout>
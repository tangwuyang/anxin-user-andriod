<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical"
    tools:context="com.anxin.kitchen.activity.ViewKitchenActivity">

    <include layout="@layout/title_bar" />

    <com.anxin.kitchen.view.HorizontalScrollMenu
        android:id="@+id/hsm_container"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="58.7dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <com.anxin.kitchen.medio.IjkVideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/black" />
<View
    android:id="@+id/playBack"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"/>
        <ImageView
            android:id="@+id/play_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="15dp"
            android:src="@drawable/kitchen_play_icon" />

        <ProgressBar
            android:id="@+id/progressbar_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58.7dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/bar_left_right_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:text="开放时间："
            android:textColor="@color/shallow_black"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/openTime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:text="08:00"
            android:textColor="@color/shallow_black"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:text="-"
            android:textColor="@color/shallow_black"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/endTime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:text="08:00"
            android:textColor="@color/shallow_black"
            android:textSize="@dimen/normal_text_size" />
    </LinearLayout>
</LinearLayout>

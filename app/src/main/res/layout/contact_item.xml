<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:background="@color/main_bg_color"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
     android:layout_height="58.7dp">
    <RelativeLayout
        android:id="@+id/info_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:visibility="gone"
            android:layout_marginLeft="@dimen/bar_left_right_padding"
            android:id="@+id/select_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/unselected_drawable"
            />
        <ImageView
            android:layout_toRightOf="@id/select_img"
            android:layout_marginLeft="16dp"
            android:id="@+id/img_avatar"
            android:layout_width="@dimen/profile_weight"
            android:layout_height="@dimen/profile_height"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:layout_marginRight="16dp"
            android:src="@drawable/vector_contact_focus"
            />

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_avatar"
            android:textColor="#373737"
            android:textSize="@dimen/big_text_size" />

        <TextView
            android:id="@+id/tv_mobile"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/tv_name"
            android:textSize="@dimen/normal_text_size"
            android:textColor="#969696" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
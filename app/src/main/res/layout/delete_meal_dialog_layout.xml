<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="307dp"
    android:layout_height="wrap_content"
    android:background="@drawable/request_location_bg_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bar_left_right_padding"
            android:layout_marginTop="@dimen/bar_left_right_padding"
            android:gravity="center"
            android:padding="0dp"
            android:text="温馨提示"
            android:textColor="@color/black"
            android:textSize="@dimen/title_text_size" />


    </RelativeLayout>

    <TextView
        android:gravity="center"
        android:layout_margin="10dp"
        android:textColor="@color/shallow_text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定删除此菜单吗？"
        android:background="@color/item_divider" />



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/item_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_item_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取  消"
            android:textColor="@color/shallow_black"
            android:textSize="@dimen/title_text_size" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/item_divider" />

        <TextView
            android:id="@+id/sure_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确  定"
            android:textColor="@color/open_color"
            android:textSize="@dimen/title_text_size" />
    </LinearLayout>
</LinearLayout>
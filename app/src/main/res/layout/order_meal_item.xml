<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingRight="@dimen/bar_left_right_padding"
    android:paddingLeft="@dimen/bar_left_right_padding"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/meal_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清蒸狮子头"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/mid_text_size" />

        <TextView
            android:id="@+id/meal_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清蒸狮子头"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/normal_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nums_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✘20"
            android:textColor="@color/shallow_text_color"
            android:textSize="@dimen/mid_text_size" />

        <TextView
            android:id="@+id/money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥1111.00"
            android:layout_weight="1"
            android:textColor="@color/red"
            android:gravity="right"
            android:textSize="@dimen/normal_text_size" />

    </LinearLayout>

</LinearLayout>
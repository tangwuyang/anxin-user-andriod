<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/pay_grey"
        android:paddingLeft="@dimen/bar_left_right_padding"
        android:paddingRight="@dimen/bar_left_right_padding"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="送餐时间"
            android:textColor="@color/shallow_text_color"
            />
        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/shallow_text_color"
            android:text="2018-4-3 周五 午餐"
            />
    </LinearLayout>
    <LinearLayout
        android:paddingRight="@dimen/bar_left_right_padding"
        android:paddingLeft="@dimen/bar_left_right_padding"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/meal_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清蒸狮子头"
                android:textColor="@color/shallow_text_color"
                android:textSize="@dimen/mid_text_size" />

            <TextView
                android:id="@+id/meal_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清蒸狮子头"
                android:textColor="@color/shallow_text_color"
                android:textSize="@dimen/normal_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nums_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✘20"
                android:textColor="@color/shallow_text_color"
                android:textSize="@dimen/mid_text_size" />

            <TextView
                android:id="@+id/money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥1111.00"
                android:layout_weight="1"
                android:textColor="@color/shallow_text_color"
                android:gravity="right"
                android:textSize="@dimen/normal_text_size" />

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:paddingLeft="@dimen/bar_left_right_padding"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/item_divider"/>
    <LinearLayout
        android:paddingLeft="@dimen/bar_left_right_padding"
        android:paddingRight="@dimen/bar_left_right_padding"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_item_height">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tableware_de_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="铁牌保温餐具(押金)"
                android:textColor="@color/shallow_text_color"
                android:textSize="@dimen/mid_text_size" />

            <TextView
                android:id="@+id/tablew_g_m_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（押金23.00元/份）"
                android:textColor="@color/shallow_text_color"
                android:textSize="@dimen/small_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tableware_nums_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✘20"
                android:textColor="@color/shallow_text_color"
                android:textSize="@dimen/mid_text_size" />

            <TextView
                android:id="@+id/tableware_money_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="￥111.00"
                android:textColor="@color/shallow_text_color"
                android:gravity="right"
                android:textSize="@dimen/normal_text_size" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:paddingLeft="@dimen/bar_left_right_padding"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/item_divider"/>
    <LinearLayout
        android:paddingLeft="@dimen/bar_left_right_padding"
        android:paddingRight="@dimen/bar_left_right_padding"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_item_height">
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tableware_use_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="铁牌保温餐具(使用费)"
                android:gravity="left"
                android:textColor="@color/shallow_text_color"
                android:textSize="@dimen/mid_text_size" />

            <TextView
                android:id="@+id/tablew_u_m_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="（使用费23.00元/份）"
                android:textColor="@color/shallow_text_color"
                android:textSize="@dimen/small_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tableware_nums_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✘20"
                android:textColor="@color/shallow_text_color"
                android:textSize="@dimen/mid_text_size" />

            <TextView
                android:id="@+id/tableware_money_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="￥111.00"
                android:textColor="@color/shallow_text_color"
                android:gravity="right"
                android:textSize="@dimen/normal_text_size" />

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:paddingLeft="@dimen/bar_left_right_padding"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/item_divider"/>
    <LinearLayout
        android:paddingLeft="@dimen/bar_left_right_padding"
        android:paddingRight="@dimen/bar_left_right_padding"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_item_height">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配送费"
                android:textColor="@color/shallow_text_color"
                android:textSize="@dimen/mid_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/shallow_text_color"
                android:textSize="@dimen/normal_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/send_nums_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✘20"
                android:textColor="@color/shallow_text_color"
                android:textSize="@dimen/mid_text_size" />

            <TextView
                android:id="@+id/send_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="￥111.00"
                android:textColor="@color/shallow_text_color"
                android:gravity="right"
                android:textSize="@dimen/normal_text_size" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:paddingLeft="@dimen/bar_left_right_padding"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/item_divider"/>
    <LinearLayout
        android:paddingLeft="@dimen/bar_left_right_padding"
        android:paddingRight="@dimen/bar_left_right_padding"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_item_height">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计"
                android:textColor="@color/shallow_text_color"
                android:textSize="@dimen/mid_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/shallow_text_color"
                android:textSize="@dimen/normal_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/all_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="￥111.00"
                android:textColor="@color/red"
                android:gravity="right"
                android:textSize="@dimen/normal_text_size" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/white" />

            <corners android:radius="3dp" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        >
        <shape>
            <gradient
                android:centerColor="#ff3232"
                android:endColor="#ff3232"
                android:startColor="#ff3232"/>

            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
            <!-- 应该是圆角 -->
            <corners android:radius="3dp" />
        </shape>
    </item>

</layer-list>
